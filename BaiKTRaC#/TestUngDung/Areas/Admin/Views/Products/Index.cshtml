@using PagedList.Mvc;
@model PagedList.IPagedList<ModelEF.Model.Product>
@using TestUngDung.Helper

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user"></i>&nbsp;Quản Lý Sản Phẩm
}
@using (Html.BeginForm("Index", "Products", FormMethod.Post))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @Html.ActionLink("Tạo Mới", "Create", "Products", new { @class = "btn btn-danger" })
        </div>
        <div class="col-md-4">
            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khoá tìm kiếm" class="form-control">
        </div>
        <div class="col-md-2">
            <input type="submit" value="Tìm Kiếm" class="btn btn-default" />
        </div>
    </div>
}

<div class="col-lg-12 form-group">
    <table class="table" style="border: 0.5px solid blue;">
        <tr>
            <th>
                STT
            </th>
            <th>
                ID
            </th>
            <th>
                Tên Sản Phẩm
            </th>
            <th>
                Đơn Giá
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Hình ảnh
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
            <th>
                Loại SP_ID
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>*@
            <th>
                Thao Tác
            </th>
        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
            <tr id=" row_@item.ProductID">
                <td>
                    @i
                </td>
                <td>
                    @item.ProductID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.UnitCost
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @Html.Image(item.Image, "image", new { width = "40px", heigth = "40px" })
                </td>
                @*<td>
                        @item.Description
                    </td>*@
                <td>
                    @item.CategoryID
                </td>
                @*<td>
                        @item.Status
                    </td>*@
                <td>
                    <a href="~/Admin/Products/Create/@item.ProductID">@*<i class="fa fa-refresh"></i>*@Chi Tiết</a>
                    &nbsp; |
                    @Ajax.ActionLink(" ", "Delete", new { @productid = item.ProductID},new AjaxOptions
               {
                   Confirm = "Bạn có muốn xoá bản ghi này?",
                   OnComplete = "$('#row_"+@item.ProductID+"').remove()",
                   HttpMethod = "Delete"
               }, new { @class = " glyphicon glyphicon-trash"})
                </td>
            </tr>
            i++;
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</div>
