@using PagedList.Mvc;
@model PagedList.IPagedList<ModelEF.Model.UserAccount>

@{
    ViewBag.Title = "Quản Lý Người Dùng";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user"></i>&nbsp;Quản Lý Người Dùng
}
@using (Html.BeginForm("Index", "User", FormMethod.Post))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @*@Html.ActionLink("Tạo Mới", "Create", "UserAccount", new { @class = "btn btn-danger" })*@
        </div>
        <div class="col-md-4">
            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khoá tìm kiếm" class="form-control">
        </div>
        <div class="col-md-2">
            <input type="submit" value="Tìm Kiếm" class="btn btn-default" />
        </div>
    </div>
}

<div class="col-lg-12 form-group">

    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Mã Người Dùng
            </th>
            <th>
                Tên Tài Khoản
            </th>
            <th>
                Mật Khẩu
            </th>
            <th>
                Trạng Thái
            </th>
            <th>Thao Tác</th>
        </tr>
        @{ var i = 1;}
        @foreach (var item in Model)
        {
            <tr id=" row_@item.ID">
                <td>
                    @i
                </td>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.PassWord
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @*<a href="~/Admin/User/Create/@item.ID"><i class="fa fa-refresh"></i></a>*@
                    &nbsp;
                    @Ajax.ActionLink(" ", "Delete", new { @id = item.ID},new AjaxOptions
               {
                   Confirm = "Bạn có muốn xoá bản ghi này?",
                   OnComplete = "$('#row_"+@item.ID+"').remove()",
                   HttpMethod = "Delete"
               }, new { @class = " glyphicon glyphicon-trash"})

                </td>
            </tr>
            i++;
        }

    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</div>
